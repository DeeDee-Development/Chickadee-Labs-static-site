---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout
  title="Contact Us | Chickadee Health"
  description="Get in touch with Chickadee Health. We're here to answer your questions about fall prevention and family health monitoring."
  simpleNav={true}
>
  <!-- Hero Section -->
  <section class="hero">
    <div class="container">
      <div class="hero-content">
        <h1>Get in Touch</h1>
        <p class="hero-subtitle">
          Have questions about Chickadee Health? We'd love to hear from you.
        </p>
      </div>
    </div>
  </section>

  <!-- Tally Form Section -->
  <section class="section form-section">
    <div class="container">
      <div class="form-container">
        <iframe
          data-tally-src="https://tally.so/embed/Gxxekp?alignLeft=1&hideTitle=1&transparentBackground=1&dynamicHeight=1"
          loading="lazy"
          width="100%"
          height="800"
          frameborder="0"
          marginheight="0"
          marginwidth="0"
          title="Contact Us"
        ></iframe>
      </div>
    </div>
  </section>

  <script src="https://tally.so/widgets/embed.js"></script>

  <style>
    /* Hero Section */
    .hero {
      background: linear-gradient(135deg, var(--color-primary-light) 0%, var(--color-accent-light) 100%);
      padding: var(--space-3xl) 0 var(--space-2xl);
      text-align: center;
    }

    .hero-content {
      max-width: 700px;
      margin: 0 auto;
    }

    .hero h1 {
      font-size: var(--font-size-4xl);
      font-weight: var(--font-weight-bold);
      color: var(--color-text);
      margin-bottom: var(--space-md);
      line-height: 1.2;
    }

    .hero-subtitle {
      font-size: var(--font-size-xl);
      color: var(--color-text-muted);
      line-height: 1.6;
      margin: 0;
    }

    /* Form Section */
    .form-section {
      padding: var(--space-3xl) 0;
      background: white;
    }

    .form-container {
      max-width: 800px;
      margin: 0 auto;
    }

    .form-container iframe {
      border: none;
      display: block;
    }

    /* Mobile Responsive */
    @media (max-width: 768px) {
      .hero {
        padding: var(--space-2xl) 0 var(--space-xl);
      }

      .hero h1 {
        font-size: var(--font-size-3xl);
      }

      .hero-subtitle {
        font-size: var(--font-size-lg);
      }

      .form-section {
        padding: var(--space-2xl) 0;
      }

      .form-container iframe {
        height: 700px;
      }
    }
  </style>
</BaseLayout>

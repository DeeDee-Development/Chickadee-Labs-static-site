---
// Redirect /messages to /sms-opt-in/
const redirectTo = '/sms-opt-in/';

// Metadata for text message previews (Open Graph/Twitter Cards)
const title = 'Stay Connected to Your Loved Ones | Chickadee Health';
const description = 'Get timely health alerts about your family member delivered right to your phone. Opt in to receive SMS notifications when fall risks are detected.';
const siteUrl = 'https://chickadee.family';
const pageUrl = `${siteUrl}/messages`;
const imageUrl = `${siteUrl}/message-preview.png`; // Custom preview image (1200x630)
const imageAlt = 'Chickadee Health - Family fall prevention and health monitoring';
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="refresh" content={`0; url=${redirectTo}`}>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- Page Title -->
  <title>{title}</title>
  <meta name="description" content={description}>

  <!-- Open Graph / Facebook / iMessage (Enhanced) -->
  <meta property="og:type" content="website">
  <meta property="og:url" content={pageUrl}>
  <meta property="og:title" content={title}>
  <meta property="og:description" content={description}>
  <meta property="og:image" content={imageUrl}>
  <meta property="og:image:url" content={imageUrl}>
  <meta property="og:image:secure_url" content={imageUrl}>
  <meta property="og:image:type" content="image/png">
  <meta property="og:image:width" content="1200">
  <meta property="og:image:height" content="630">
  <meta property="og:image:alt" content={imageAlt}>
  <meta property="og:site_name" content="Chickadee Health">
  <meta property="og:locale" content="en_US">

  <!-- Twitter (Enhanced for larger preview) -->
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:url" content={pageUrl}>
  <meta name="twitter:title" content={title}>
  <meta name="twitter:description" content={description}>
  <meta name="twitter:image" content={imageUrl}>
  <meta name="twitter:image:alt" content={imageAlt}>

  <!-- Apple-specific Meta Tags -->
  <meta name="apple-mobile-web-app-capable" content="yes">
  <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
  <meta name="apple-mobile-web-app-title" content="Chickadee Health">
  <link rel="apple-touch-icon" href="/app-icon.png">

  <!-- Additional Meta -->
  <meta name="theme-color" content="#F5A623">
  <meta name="format-detection" content="telephone=no">
</head>
<body>
  <p>Redirecting to <a href={redirectTo}>SMS Opt-In</a>...</p>

  <script is:inline>
    // JavaScript fallback for instant redirect
    window.location.href = "/sms-opt-in/";
  </script>
</body>
</html>

---
import { SEO } from 'astro-seo';
import { generateAllThemesCSS } from '../config/colors';
import '../styles/global.css';

/**
 * CHANGE THEME HERE FOR INSTANT HOT-RELOAD
 * Available: 'warm-caring' | 'golden-hour' | 'autumn-comfort' | 'tech-blue'
 */
const THEME = 'golden-hour';

interface Props {
  title?: string;
  description?: string;
  simpleNav?: boolean;
  image?: string;
  noindex?: boolean;
}

const {
  title = "Prevent Falls Before They Happen | Chickadee Health - Apple Watch App",
  description = "Chickadee Health uses Apple Watch biometrics to predict fall risks before they happen. Smart monitoring of gait, sleep, and activity patterns gives families early warningsâ€”not just fall alerts.",
  simpleNav = false,
  image = "/og-image.png",
  noindex = false
} = Astro.props;

// Generate CSS for all themes
const themesCSS = generateAllThemesCSS();

// Get the canonical URL
const canonicalURL = new URL(Astro.url.pathname, Astro.site).href;

// Default OG image
const ogImageURL = new URL(image, Astro.site).href;
---

<!DOCTYPE html>
<html lang="en" data-theme={THEME}>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- SEO Meta Tags -->
  <SEO
    title={title}
    description={description}
    canonical={canonicalURL}
    noindex={noindex}
    nofollow={noindex}
    openGraph={{
      basic: {
        title: title,
        type: "website",
        image: ogImageURL,
        url: canonicalURL,
      },
      optional: {
        description: description,
        siteName: "Chickadee Health",
      },
      image: {
        alt: "Chickadee Health - Predictive Fall Prevention for Seniors",
      },
    }}
    twitter={{
      card: "summary_large_image",
      title: title,
      description: description,
      image: ogImageURL,
      imageAlt: "Chickadee Health - Predictive Apple Watch Fall Prevention",
    }}
    extend={{
      meta: [
        { name: "theme-color", content: "#F5A623" },
        { name: "apple-mobile-web-app-capable", content: "yes" },
        { name: "apple-mobile-web-app-status-bar-style", content: "default" },
        { name: "keywords", content: "fall prediction app, Apple Watch fall prevention, elderly health monitoring, caregiver app, gait analysis, senior safety, predictive health, fall risk assessment" },
        { name: "author", content: "Chickadee Health" },
      ],
      link: [
        { rel: "sitemap", href: "/sitemap-index.xml" },
      ],
    }}
  />

  <!-- Schema.org Structured Data -->
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "MobileApplication",
    "name": "Chickadee Health",
    "operatingSystem": "iOS",
    "applicationCategory": "HealthApplication",
    "description": "Predictive fall risk monitoring for Apple Watch. Analyzes gait, sleep, and activity patterns to predict fall risks before they happen.",
    "offers": {
      "@type": "Offer",
      "price": "0",
      "priceCurrency": "USD"
    }
  }
  </script>
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "Organization",
    "name": "Chickadee Health",
    "url": "https://chickadee.family",
    "logo": "https://chickadee.family/app-icon.png",
    "description": "Predictive fall prevention technology for seniors and their families"
  }
  </script>

  <!-- Favicon -->
  <link rel="icon" type="image/png" href={import.meta.env.BASE_URL + "favicon.png"}>

  <!-- Inter Font -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">

  <!-- Theme Overrides -->
  <style is:global set:html={themesCSS}></style>
</head>
<body>
  <!-- Header -->
  <header class="header">
    <nav class="container nav">
      <a href={import.meta.env.BASE_URL} class="logo" id="logo-link">
        <img src={import.meta.env.BASE_URL + "favicon.png"} alt="Chickadee Health Icon" class="logo-icon" />
        <span class="logo-text">Chickadee Health</span>
      </a>
      {!simpleNav && (
        <ul class="nav-links">
          <li><a href={import.meta.env.BASE_URL + "caregivers/"}>For Caregivers</a></li>
          <li><a href={import.meta.env.BASE_URL + "#about"}>About</a></li>
          <li><a href={import.meta.env.BASE_URL + "sms-opt-in/"}>SMS</a></li>
          <li><a href={import.meta.env.BASE_URL + "contact/"} class="btn btn-primary btn-sm">Contact</a></li>
        </ul>
      )}
    </nav>
  </header>

  <!-- Main Content -->
  <main>
    <slot />
  </main>

  <!-- Footer -->
  <footer class="footer">
    <div class="container">
      <div class="footer-content">
        <div class="footer-section">
          <h4>Chickadee Health</h4>
          <p>Peace of mind for your family's health</p>
        </div>
        <div class="footer-section">
          <h4>Product</h4>
          <ul>
            <li><a href="https://tally.so/r/q445pY" target="_blank" rel="noopener noreferrer">Join Waitlist</a></li>
            <li><a href={import.meta.env.BASE_URL + "caregivers/"}>For Caregivers</a></li>
            <li><a href={import.meta.env.BASE_URL + "sms-opt-in/"}>SMS Opt-In</a></li>
            <li><a href={import.meta.env.BASE_URL + "#about"}>About</a></li>
            <li><a href={import.meta.env.BASE_URL + "contact/"}>Contact</a></li>
          </ul>
        </div>
        <div class="footer-section">
          <h4>Company</h4>
          <ul>
            <li><a href={import.meta.env.BASE_URL + "team/"}>Team</a></li>
            <li><a href={import.meta.env.BASE_URL + "faq/"}>FAQ</a></li>
            <li><a href={import.meta.env.BASE_URL + "accessibility/"}>Accessibility</a></li>
            <li><a href={import.meta.env.BASE_URL + "privacy/"}>Privacy Policy</a></li>
            <li><a href={import.meta.env.BASE_URL + "terms/"}>Terms & Conditions</a></li>
            <li><a href={import.meta.env.BASE_URL + "contact/"}>Contact</a></li>
          </ul>
        </div>
      </div>
      <div class="footer-bottom">
        <p>&copy; 2025 Chickadee Labs LLC. All rights reserved.</p>
      </div>
    </div>
  </footer>

  <style>
    /* Header Styles */
    .header {
      background: white;
      box-shadow: var(--shadow-sm);
      position: sticky;
      top: 0;
      z-index: 100;
    }

    .nav {
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: var(--space-md) var(--space-md);
      min-height: 72px;
    }

    .logo {
      display: flex;
      align-items: center;
      gap: var(--space-sm);
    }

    .logo-icon {
      width: 36px;
      height: 36px;
      object-fit: contain;
      transition: transform 0.1s ease;
    }

    /* Cute wiggle animation */
    @keyframes wiggle {
      0%, 100% { transform: rotate(0deg); }
      25% { transform: rotate(-5deg); }
      75% { transform: rotate(5deg); }
    }

    .logo.wiggle .logo-icon {
      animation: wiggle 0.5s ease-in-out;
    }

    .logo-text {
      font-size: var(--font-size-xl);
      font-weight: var(--font-weight-bold);
      background: var(--gradient-hero);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }

    .nav-links {
      display: flex;
      align-items: center;
      gap: var(--space-lg);
      list-style: none;
    }

    .nav-links a {
      font-weight: var(--font-weight-semibold);
      color: var(--color-text);
      transition: color var(--transition-fast);
    }

    .nav-links a:hover {
      color: var(--color-primary);
    }

    .btn-sm {
      padding: 0.5rem 1rem;
      font-size: var(--font-size-base);
    }

    /* Footer Styles */
    .footer {
      background: var(--color-text);
      color: white;
      padding: var(--space-3xl) 0 var(--space-lg);
    }

    .footer-content {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: var(--space-xl);
      margin-bottom: var(--space-xl);
    }

    .footer-section h4 {
      color: white;
      margin-bottom: var(--space-md);
    }

    .footer-section p {
      color: var(--color-text-muted);
      margin: 0;
    }

    .footer-section ul {
      list-style: none;
    }

    .footer-section ul li {
      margin-bottom: var(--space-sm);
    }

    .footer-section a {
      color: var(--color-text-muted);
      transition: color var(--transition-fast);
    }

    .footer-section a:hover {
      color: white;
    }

    .footer-bottom {
      border-top: 1px solid var(--color-border-light);
      padding-top: var(--space-lg);
      text-align: center;
    }

    .footer-bottom p {
      color: var(--color-text-faded);
      margin: 0;
    }

    /* Mobile Navigation */
    @media (max-width: 768px) {
      .nav-links {
        gap: var(--space-md);
      }

      .nav-links li:not(:last-child) {
        display: none;
      }

      .footer-content {
        grid-template-columns: 1fr;
      }
    }
  </style>

  <script>
    // Cute logo wiggle on click + scroll to top when on homepage
    document.addEventListener('DOMContentLoaded', () => {
      const logo = document.getElementById('logo-link');
      if (logo) {
        logo.addEventListener('click', (e) => {
          // Only trigger animation and scroll if we're already on the homepage
          if (window.location.pathname === '/' || window.location.pathname === '/index.html') {
            e.preventDefault();
            logo.classList.add('wiggle');
            setTimeout(() => {
              logo.classList.remove('wiggle');
            }, 500);
            // Smooth scroll to top
            window.scrollTo({ top: 0, behavior: 'smooth' });
          }
        });
      }
    });
  </script>
</body>
</html>
